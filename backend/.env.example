# Backend WebSocket Configuration
PORT=3000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/greenhouse

# CORS - Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,https://reimon.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# ESP32 Authentication Token (REQUIRED - NO DEFAULT)
# Generate a secure random token with: openssl rand -hex 32
# Server will NOT start without this variable set
# Minimum 32 characters required
ESP32_AUTH_TOKEN=REPLACE_WITH_YOUR_SECURE_64_CHAR_HEX_TOKEN_GENERATED_BY_OPENSSL
